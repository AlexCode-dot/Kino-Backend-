<!doctype html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>Kino Kvikkjokk</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" type="text/css" media="screen" href="/static/styles.css" />
  <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet" />
  <style>
    body {
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), 
        url('<%= frontPageImages.backgroundImage %>');
    }
  </style>
</head>

<body>
  <header class="header">
    <div class="header__logo">
      <h1 class="header__logo-title"><%= frontPageContent.header.logoTitle %></h1>
    </div>
    <nav class="header__nav">
      <ul class="header__nav-list">
        <% menuItems.forEach(item=> { %>
          <li class="header__nav-item <%= item.active ? 'menu-active' : 'menu-inactive' %>">
            <a href="<%= item.link %>">
              <%= item.label %>
            </a>
          </li>
          <% }) %>
      </ul>
    </nav>
  </header>
  <main class="main">
    <%- body %>
  </main>
  <footer class="footer">
    <div class="footer__social">
      <h3 class="footer__social-title"><%= frontPageContent.footer.socialTitle %></h3>
      <a class="footer__social-twitter" href="https://x.com/">
        <img src="/static/assets/images/icons/icons-twitter-white-512.png" alt="New Twitter Icon" />
      </a>
      <a class="footer__social-instagram" href="https://www.instagram.com/">
        <img src="/static/assets/images/icons/icons-instagram-white-512.png" alt="Instagram Icon" />
      </a>
      <a class="footer__social-youtube" href="https://www.youtube.com/">
        <img src="/static/assets/images/icons/icons-youtube-white-512.png" alt="Youtube Icon" />
      </a>
      <a class="footer__social-linkedin" href="https://www.linkedin.com/">
        <img src="/static/assets/images/icons/icons-linkedin-white-512.png" alt="LinkedIn Icon" />
      </a>
    </div>
    <div class="footer__contact">
      <h3 class="footer__contact-title"><%= frontPageContent.footer.contactTitle %></h3>
      <h6 class="footer__contact-info"><%= frontPageContent.footer.contactInfo %></h6>
      <h6 class="footer__contact-number"><%= frontPageContent.footer.contactNumber %></h6>
      <h6 class="footer__contact-mail1"><%= frontPageContent.footer.contactMail1 %></h6>
      <h6 class="footer__contact-mail2"><%= frontPageContent.footer.contactMail2 %></h6>
    </div>
    <div class="footer__find-Us">
      <h3 class="footer__find-Us-title"><%= frontPageContent.footer.findUsTitle %></h3>
      <h6 class="footer__find-Us-streetname"><%= frontPageContent.footer.findUsStreetName %></h6>
      <h6 class="footer__find-Us-postalcode"><%= frontPageContent.footer.findUsPostalCode %></h6>
      <h6 class="footer__find-Us-country"><%= frontPageContent.footer.findUsCountry %></h6>
    </div>
    <div class="footer__partners">
      <h3 class="footer__partners-title"><%= frontPageContent.footer.partnersTitle %></h3>
    </div>
  </footer>

  <script src="/static/script/celebration-modal.js"></script>
  <script src="/static/script/UI-dateFilter.js"></script>
</body>

</html>